geom_col() +
geom_text(aes(label = cites, y = cites + 1),
size = 3,
position = position_dodge(0.9),
vjust = 0) +
scale_y_continuous(expand = c(0,0),
limits = c(0,limit_y_axis)) +
labs(x = element_blank(),
y = element_blank()) +
